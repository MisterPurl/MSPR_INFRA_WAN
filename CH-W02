conf t 
router bgp 5000
redistribute ospf 100 route-map PERMIT_OSPF_INTO_BGP
neighbor 10.98.199.1 remote-as 5000
neighbor 10.98.199.3 remote-as 5000
neighbor 10.98.199.2 remote-as 5000
